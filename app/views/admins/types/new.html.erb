<div class="container mt-3">
	<div class="row">
		<%= render 'admins/dashboard' %>
		<div class="col col-6 mx-auto">

			<!-- Zone du formulaire -->
			<%= form_tag url_for(action: 'create'), method: 'post' do %>

			<%= label_tag 'Nom' %>
			<%= text_field_tag 'name', @type.name, class: "form-control mb-3" %>

			<%= submit_tag "Créer le nouveau type de vêtement", class: "btn btn-dark" %>
			<%end%>
			
		</div>
	</div>
	
</div>