<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" } do |f| %>
      <h4 class="font-weight-normal text-center">Mon inscription</h4>
      <%= devise_error_messages! %>

      <div class="field mb-3 mt-5">
        <%= f.label :first_name, "Veuillez entrer votre prénom :" %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :last_name, "Veuillez entrer votre nom :" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :address, "Votre adresse :" %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
      </div>


      <div class="field mb-3">
        <%= f.label :email, "Votre email :" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, "Votre mot de passe :" %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} caractères minimum", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "Confirmer votre mot de passe :" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions mt-4 mb-2">
        <%= f.submit "Je m'inscris", class: "btn btn-dark btn-block" %>
      </div>
      
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>