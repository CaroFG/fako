<div class="container mt-4">
	<div class="row">
		<div class="col col-md-8 offset-md-2">
			<h5>Éditer mes données personnelles</h5>

			<%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

		      <b><%= label_tag 'Mon prénom :' %></b>
		      <%= text_field_tag 'first_name', @user.first_name, class: "form-control"  %>
		      <br />

		      <b><%= label_tag 'Mon nom :' %></b>
		      <%= text_field_tag 'last_name', @user.last_name, class: "form-control" %>
		      <br />

		      <b><%= label_tag 'Mon adresse :' %></b>
		      <%= text_field_tag 'address', @user.address, class: "form-control" %>
		      <br />
				
			  <%= submit_tag "Éditer mon profil", class: "btn btn-sm btn-dark" %>
      		<hr>
     		 <p>
       		 <h6> Éditer les informations liées à mon compte (mot de passe, adresse mail)</h6>
        		<%= link_to "Éditer mot de passe / email", edit_user_registration_path, class: "btn btn-sm btn-dark" %>
     		 </p>
      			<% end %>

		</div>
	</div>
</div>