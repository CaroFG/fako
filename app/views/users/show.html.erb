<div class="container mt-5">
	<div class="row">
		<div class="col-4">
			<div class="list-group" id="list-tab" role="tablist">
				<a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">Mes informations personnelles</a>
				<a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Ma dernière commande</a>
				<a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Historique des commandes</a>
			</div>
		</div>
		<div class="col-8">
			<div class="tab-content" id="nav-tabContent">
				<div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
					<ul class="list-group-flush text-center">
						<li class="list-group-item"><%= @user.email%></li>
						<li class="list-group-item"><%= @user.first_name%></li>
						<li class="list-group-item"><%= @user.last_name%></li>
						<li class="list-group-item"><%= @user.address%></li>
						<li class="list-group-item">
							<%=link_to edit_user_path(@user), class: "btn btn-sm btn-dark" do%>
								Modifier mes coordonnées
							<%end%>
						</li>
					</ul>

				</div>
				<div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
					<%= render 'order_items/index' %>
				</div>
				<div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">
					<%= render 'orders/index' %>
				</div>
			</div>
		</div>
	</div>
</div>